{
    "appId": "com.hdo.downloadmanager",
    "productName": "HDO Download Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "assets/**/*",
      "menu/**/*",
      "src/**/*",
      "main.js",
      "index.html",
      "reportHistory.html"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "extraMetadata": {
        "main": "main.js"
    }
  }
  